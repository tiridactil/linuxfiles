#!/bin/zsh

POWERLEVEL9K_MODE="awesome-fontconfig"
POWERLEVEL9K_HOME_ICON=''
POWERLEVEL9K_HOME_SUB_ICON=''
POWERLEVEL9K_FOLDER_ICON=''
if [[ $EUID -eq 0 ]]; then
	USER_COLOR="red"
	USER_PROMPT_SYMBOL="#"
else
	USER_COLOR="green"
	USER_PROMPT_SYMBOL="$"
fi

FANCY_PROMPT=0

if [[ $FANCY_PROMPT -eq 1 ]]; then
	POWERLEVEL9K_PROMPT_ON_NEWLINE=false
	POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="\n \b"
	POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(root_indicator context dir newline custom_vcs)
	POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time vcs)
	POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="> %F{${USER_COLOR}}${USER_PROMPT_SYMBOL}%f "
	POWERLEVEL9K_CUSTOM_VCS=(eval 'print -P "%20s" $(prompt_vcs right 1)')
else
	POWERLEVEL9K_PROMPT_ON_NEWLINE=true
	POWERLEVEL9K_MULTILINE_FIRST_PROMPT_PREFIX="\n \b"
	POWERLEVEL9K_MULTILINE_LAST_PROMPT_PREFIX="> %F{${USER_COLOR}}${USER_PROMPT_SYMBOL}%f "
	POWERLEVEL9K_LEFT_PROMPT_ELEMENTS=(vcs newline root_indicator context dir)
	POWERLEVEL9K_RIGHT_PROMPT_ELEMENTS=(status command_execution_time time)
fi

POWERLEVEL9K_CONTEXT_TEMPLATE="\b\b\b%B%F{white}%n%b%K{black}%F{grey}@%m"
POWERLEVEL9K_COMMAND_EXECUTION_TIME_THRESHOLD=0
POWERLEVEL9K_COMMAND_EXECUTION_TIME_PRECISION=2

POWERLEVEL9K_CONTEXT_DEFAULT_FOREGROUND='grey'
POWERLEVEL9K_CONTEXT_DEFAULT_BACKGROUND='black'
POWERLEVEL9K_USER_DEFAULT_FOREGROUND='white'
POWERLEVEL9K_USER_DEFAULT_BACKGROUND='black'
POWERLEVEL9K_USER_ROOT_FOREGROUND='red'
POWERLEVEL9K_USER_ROOT_BACKGROUND='black'
POWERLEVEL9K_ROOT_INDICATOR_FOREGROUND='red'
POWERLEVEL9K_ROOT_INDICATOR_BACKGROUND='black'
POWERLEVEL9K_HOST_LOCAL_FOREGROUND='grey'
POWERLEVEL9K_HOST_LOCAL_BACKGROUND='black'
POWERLEVEL9K_HOST_REMOTE_FOREGROUND='grey'
POWERLEVEL9K_HOST_REMOTE_BACKGROUND='black'
POWERLEVEL9K_DIR_HOME_SUBFOLDER_FOREGROUND="${USER_COLOR}"
POWERLEVEL9K_DIR_HOME_SUBFOLDER_BACKGROUND='black'
POWERLEVEL9K_DIR_HOME_FOREGROUND="${USER_COLOR}"
POWERLEVEL9K_DIR_HOME_BACKGROUND='black'
POWERLEVEL9K_DIR_DEFAULT_FOREGROUND='grey'
POWERLEVEL9K_DIR_DEFAULT_BACKGROUND='black'
POWERLEVEL9K_TIME_FOREGROUND='grey'
POWERLEVEL9K_TIME_BACKGROUND='black'
POWERLEVEL9K_COMMAND_EXECUTION_TIME_FOREGROUND='grey'
POWERLEVEL9K_COMMAND_EXECUTION_TIME_BACKGROUND='black'